<!DOCTYPE html>
<html  lang="en" id="html">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://fonts.googleapis.com/css2?family=Aref+Ruqaa:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="./css/addQue.css">
    <link rel="stylesheet" href="./css/footer.css">
</head>
<body>
    <%- include ('../views/layout/header.ejs') %>
    <main id="main">
        <h1 #id="myQue">أسئلتي السابقة <i class="far fa-clipboard"></i></h1>
        <%queData.forEach((ele)=>{%>
            <ul id = 'ul'>
                <a href="/question?id=<%=ele.que_id%>" class="a"><li><p id="p"><%=ele.title%></p></li></a>
                <p id="description"><%=ele.description%></p>
            </ul>
            <%})%>
        <h1 id="addQueh1">أضف سؤالاً<i class="fas fa-question fa-flip-horizontal"></i><i class="fas fa-exclamation"></i></h1>
        <form id = 'addQueForm'>
            <div id="div"> 
             <input type="text" name="title" placeholder="عنوان السؤال" required>
             <input type="text" list="tags" name="add-tage"placeholder='أضف تصنيف للسؤال "يمكنك الإختيار من القائمة"'>
                <datalist id="tags">
                    <option value="html">
                    <option value="css">
                    <option value="Js">
                    <option value="Python">
                    <option value="C#">
                    <option value="C++">
                    <option value="Java">
                    <option value="Ts">
                    <option value="PHP">
                </datalist>
             <!-- <input type="textare" name="description"> -->
             <textarea  rows="4" cols="50" name="description" placeholder="أضف وصف للسؤال" required></textarea>
             <textarea  rows="4" cols="50" name="code" placeholder="Code" required></textarea>
             <input type="submit" value="أضف السؤال" id="add">
            </div>
        </form> 
        <script src="https://kit.fontawesome.com/0159277acf.js" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.5.0.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.0/jquery.js"></script>
        <script src="js/addQue.js"></script>
    </main>
    <%- include ('../views/layout/footer.ejs') %>
</body>
</html>